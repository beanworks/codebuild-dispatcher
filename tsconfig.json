{
    "compilerOptions": {
        "pretty": true,
        "sourceMap": true,
        "module": "CommonJS",
        "target": "ES5",
        "moduleResolution": "node",
        "outDir": "./dist",
        // "paths": {
        //   "*": ["./src"]
        // },
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "preserveConstEnums": true
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
}